{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "decorative_blocks:block/dark_oak_seat"
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "decorative_blocks:block/dark_oak_seat",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "decorative_blocks:block/dark_oak_seat",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "decorative_blocks:block/dark_oak_seat",
        "y": 270
      }
    },
    {
      "when": {
        "attached": "true"
      },
      "apply": {
        "model": "decorative_blocks:block/dark_oak_seat_post"
      }
    },
    {
      "when": {
        "post": "true"
      },
      "apply": {
        "model": "decorative_blocks:block/dark_oak_seat_top_post"
      }
    }
  ]
}